aws ecr describe-repositories

ADDRESS=256151029476.dkr.ecr.us-west-2.amazonaws.com/aws-31725-vcc-eks-spinnaker-us-west-2-deployment01
REGION=us-west-2

hal config provider docker-registry enable

hal config provider docker-registry account edit aws-deployment-ecr \
 --address 256151029476.dkr.ecr.us-west-2.amazonaws.com \
 --repositories aws-31725-vcc-eks-spinnaker-us-west-2-deployment01 \
 --username AWS \
 --password-command "aws --region $REGION ecr get-authorization-token --output text --query 'authorizationData[].authorizationToken' | base64 -d | sed 's/^AWS://'"
